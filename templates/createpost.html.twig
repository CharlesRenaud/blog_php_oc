{% extends 'base.html.twig' %}

{% block title %}Ajouter un article
{% endblock %}

{% block content %}
	<h1>Ajouter un article</h1>

	{% if errors %}
		<div class="alert alert-danger">
			{% for error in errors %}
				<p>{{ error }}</p>
			{% endfor %}
		</div>
	{% endif %}

	<form method="post" action="{{ path('add_post', {'id': 0}) }}" enctype="multipart/form-data">
		<div class="form-group">
			<label for="title">Titre</label>
			<input type="text" class="form-control" id="title" name="title" value="{{ title }}">
		</div>
		<div class="form-group">
			<label for="content">Contenu</label>
			<textarea class="form-control" id="content" name="content" rows="10">{{ content }}</textarea>
		</div>
		<div class="form-group">
			<label for="coverImage">Image de couverture</label>
			<input type="file" class="form-control-file" id="coverImage" name="coverImage">
		</div>
		<div class="form-group">
			<label for="content">Lien externe</label>
			<input type="text" class="form-control" id="externalUrl" name="externalUrl" value="{{ externalUrl }}">
		</div>
		<div class="form-group">
			<label for="content">Claim</label>
			<input type="text" class="form-control" id="claim" name="claim" value="{{ claim }}">
		</div>
		<button type="submit" class="btn btn-primary">Ajouter</button>
	</form>

{% endblock %}
